<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetilAudioActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/speaker_icon"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:id="@+id/Detil_Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SFX Library and Previewer"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/Detil_Keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SFX Library and Previewer"
            android:textSize="12dp"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/btn_play"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Play SFX"
            android:layout_marginBottom="10dp"
            android:onClick="play_sfx"/>
    </LinearLayout>

</LinearLayout>